.popover.right.am-flip-x
  .arrow
  .popover-content
    form(name='popoverForm')
      p(ng-bind-html='content', style='min-width: 300px')
      pre
        = '2 + 3 = '
        span(ng-cloak) {{ 2 + 3 }}

      .form-actions
        button.btn.btn-danger(type='button', ng-click='$hide()') Close
        button.btn.btn-primary(
          type='button',
          class='btn btn-primary',
          ng-click='popover.saved=true;$hide()'
        )
          | Save changes
